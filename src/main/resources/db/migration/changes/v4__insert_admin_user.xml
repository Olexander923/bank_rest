<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="4" author="shadrin.dev">
        <!-- проверка, существует ли уже администратор -->
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM users WHERE username = 'admin'
            </sqlCheck>
        </preConditions>

        <insert tableName="users">
            <column name="username" value="admin"/>
            <column name="password" value="$2a$10$gr1.B4ok888JLPMHssM71ebUVaNOc27.dIPcOE4VOgL/kCw8bEthq"/>
            <column name="email" value="admin@bankapp.com"/>
            <column name="role" value="ADMIN"/>
        </insert>

        <rollback>
            <delete tableName="users">
                <where>username='admin'</where>
            </delete>
        </rollback>
    </changeSet>
</databaseChangeLog>